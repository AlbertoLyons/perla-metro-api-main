{
    "Routes": [
        {
            "_note": "Connects to the User Service",
            "RouteName": "perla-metro-user-service",
            "DownstreamPathTemplate": "/api/{everything}",
            "DownstreamScheme": "http",
            "DownstreamHostAndPorts": [
                {
                    "Host": "localhost",
                    "Port": 5001
                }
            ],
            "UpstreamPathTemplate": "/user-service/{everything}",
            "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ]
        },
        {
            "_note": "Connects to the Ticket Service",
            "RouteName": "perla-metro-ticket-service",
            "DownstreamPathTemplate": "/api/ticket/{id}",
            "DownstreamScheme": "http",
            "DownstreamHostAndPorts": [
                {
                    "Host": "localhost",
                    "Port": 5002
                }
            ],
            "UpstreamPathTemplate": "/ticket-service/ticket/{id}",
            "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ]
        },
        {
            "_note": "Connects to the Route Service",
            "_note2": "Only Admins can DELETE or GET all routes",
            "RouteName": "perla-metro-route-service",
            "DownstreamPathTemplate": "/api/route",
            "DownstreamScheme": "https",
            "DownstreamHostAndPorts": [
                {
                    "Host": "perla-metro-route-service.onrender.com",
                    "Port": 443
                }
            ],
            "UpstreamPathTemplate": "/route-service/route",
            "UpstreamHttpMethod": [ "GET" ],
            "AuthenticationOptions": {
                "AuthenticationProviderKey": "JwtBearer",
                "AllowedScopes": []
            },
            "RouteClaimsRequirement": {
                "role": ["Admin"]
            }
        },
        {
            "RouteName": "perla-metro-route-service",
            "DownstreamPathTemplate": "/api/route/{id}",
            "DownstreamScheme": "https",
            "DownstreamHostAndPorts": [
                {
                    "Host": "perla-metro-route-service.onrender.com",
                    "Port": 443
                }
            ],
            "UpstreamPathTemplate": "/route-service/route/{id}",
            "UpstreamHttpMethod": [ "DELETE" ],
            "AuthenticationOptions": {
                "AuthenticationProviderKey": "JwtBearer",
                "AllowedScopes": []
            },
            "RouteClaimsRequirement": {
                "role": ["Admin"]
            }
        },
        {
            "_note3": "Connects to the Route Service without jwt restriction",
            "RouteName": "perla-metro-route-service",
            "DownstreamPathTemplate": "/api/route/{id}",
            "DownstreamScheme": "https",
            "DownstreamHostAndPorts": [
                {
                    "Host": "perla-metro-route-service.onrender.com",
                    "Port": 443
                }
            ],
            "UpstreamPathTemplate": "/route-service/route/{id}",
            "UpstreamHttpMethod": [ "GET", "POST", "PUT" ]
        },
        {
            "_note": "Connects to the Station Service",
            "RouteName": "perla-metro-stations-service",
            "DownstreamPathTemplate": "/api/station/{id}",
            "DownstreamScheme": "http",
            "DownstreamHostAndPorts": [
                {
                    "Host": "localhost",
                    "Port": 5004
                }
            ],
            "UpstreamPathTemplate": "/station-service/station/{id}",
            "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ]
        }
    ]
}